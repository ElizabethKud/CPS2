<Window x:Class="CPS2.GenreEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование жанра" Height="200" Width="300">
    <StackPanel Margin="15">
        <TextBlock Text="Название жанра:"/>
        <TextBox x:Name="GenreNameTextBox" Margin="0,5"/>
        <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,10" Padding="10,3"/>
    </StackPanel>
</Window>
