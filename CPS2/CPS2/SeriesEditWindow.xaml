<!-- SeriesEditWindow.xaml -->
<Window x:Class="CPS2.SeriesEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование серии" Height="200" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Название серии:"/>
        <TextBox x:Name="SeriesNameTextBox" Text="{Binding Series.SeriesName}"/>
        <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,10"/>
    </StackPanel>
</Window>