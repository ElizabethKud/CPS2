<Window x:Class="CPS2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CPS2"
        Title="Книжная система" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
            <Button Content="Добавить жанр" Click="AddGenre_Click" Margin="5"/>
            <Button Content="Добавить серию" Click="AddSeries_Click" Margin="5"/>
            <Button Content="Добавить книгу" Click="AddBook_Click" Margin="5"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Дерево иерархии -->
            <TreeView x:Name="HierarchyTreeView" Grid.Column="0" Margin="5" SelectedItemChanged="HierarchyTreeView_SelectedItemChanged">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type local:Genre}" ItemsSource="{Binding Series}">
                        <TextBlock Text="{Binding GenreName}" FontWeight="Bold" Foreground="DarkBlue"/>
                        <HierarchicalDataTemplate.ItemTemplate>
                            <HierarchicalDataTemplate DataType="{x:Type local:Series}" ItemsSource="{Binding Books}">
                                <TextBlock Text="{Binding SeriesName}" FontStyle="Italic" Foreground="DarkRed"/>
                                <HierarchicalDataTemplate.ItemTemplate>
                                    <DataTemplate DataType="{x:Type local:Book}">
                                        <TextBlock Text="{Binding Title}" Foreground="DarkGreen"/>
                                    </DataTemplate>
                                </HierarchicalDataTemplate.ItemTemplate>
                            </HierarchicalDataTemplate>
                        </HierarchicalDataTemplate.ItemTemplate>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>

            <!-- Панель деталей -->
            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10">
                <Frame x:Name="DetailsFrame" />
            </Border>
        </Grid>
    </Grid>
</Window>
