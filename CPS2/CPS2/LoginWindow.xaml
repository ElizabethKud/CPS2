<Window x:Class="CPS2.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" Height="400" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Логин:" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox"/>
            
            <TextBlock Text="Пароль:" Margin="0,10,0,5"/>
            <PasswordBox x:Name="PasswordBox"/>
            
            <Button Content="Войти" Click="LoginButton_Click" Margin="0,20" Padding="10,5"/>
            <Button Content="Регистрация" Click="RegisterButton_Click" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>
