<Window x:Class="CPS2.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="500" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Логин:" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox"/>
            
            <TextBlock Text="Пароль:" Margin="0,10,0,5"/>
            <PasswordBox x:Name="PasswordBox"/>
            
            <TextBlock Text="Повторите пароль:" Margin="0,10,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox"/>
            
            <Button Content="Зарегистрироваться" Click="RegisterButton_Click" Margin="0,20" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>
